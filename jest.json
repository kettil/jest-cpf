{
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json",
      "diagnostics": {
        "warnOnly": true
      }
    }
  },

  "preset": "ts-jest",
  "testMatch": ["**/*.test.{js,jsx,ts,tsx}"],
  "roots": ["<rootDir>/src/"],

  "resetMocks": true,
  "clearMocks": true,

  "collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}"],
  "coverageReporters": ["text-summary", "html"],
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": ["/types.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
